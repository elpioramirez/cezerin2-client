{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    "noEmitOnError": false,
    "removeComments": true,
    "allowJs": false,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "declaration": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
